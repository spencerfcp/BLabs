<div id="page_container" >
<header>
    <div id="homenavigation">
    <div class='header_logo'>{{#link-to "index" class="headerlink"}}<h1>BLABS Test Application</h1>{{/link-to}}</div>
    <div class="header_login" align="right">
    <ul>
        <li class="main_header_link">{{#link-to "index" }}ABOUT THIS APP{{/link-to}}</li>
        {{#if session.isAuthenticated}}
            <li>
                {{#link-to "home"}}<button class="header_main_link btn btn-success">Home</button>{{/link-to}}
            </li>
            <li><button class="header_main_link btn btn btn-primary" {{action 'invalidateSession'}}>Logout</button></li>
        {{else}}
            <li>
                {{#link-to "register"}}<button class="header_main_link btn btn-success registerLink">Sign Up For Free</button>{{/link-to}}
            </li>
            <li>
            <button class="header_main_link btn btn btn-primary loginlink" {{action "displayLogin"}}>Login</button>
            </li>
        {{/if}}
    </ul>
    </div>
    <div style="clear:both"></div>
    </div>

</header>
<div id="body_container">
    {{outlet}}
</div>
<footer id="main_footer">
    &copy;2013 Igor's Publishing, Inc.
</footer>
{{#login-form}}
{{/login-form}}
</div>

